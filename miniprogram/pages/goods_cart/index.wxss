/* pages/goods_cart/index.wxss */
page{
  padding-bottom:100rpx;
}
.goods_cart .address{
  margin:40rpx auto;
  width: 80%;
  height: 100rpx;
  font-size: 40rpx;  
  border: 1px solid green;
  text-align: center;
  line-height: 100rpx;
}
.user_info{
  padding-left: 25rpx;
  font-size: 36rpx;
  font-weight: 400;
}
.goods_cart .cart_text{
  padding-left: 25rpx;
  line-height: 80rpx;
  font-size:40rpx;
  font-weight:400;
  border-top: 1px solid red;
  border-bottom: 1px solid red;
}
/* 购物车详情样式 */

.goods_cart .cart{
  display:flex;
  padding: 15rpx;
  border-bottom: 1px solid gray;
}
.goods_cart .cart .check_warp{
  flex:1;
  display: flex;
  justify-content: center;
  align-items: center;   
}

.goods_cart .cart .goods_pic_warp{
  flex:2;

}
.goods_cart .cart .goods_pic_warp image{
  width: 80%;
}
.goods_cart .cart .goods_info{
  flex:4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_cart .cart .goods_info .goods_name{
  display: -webkit-box;
  overflow: hidden;
  /* -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; */
}
.goods_cart .cart .goods_info .goods_price_warp{
  display: flex;
  justify-content: space-between;
  
}
.goods_cart .cart .goods_info .goods_price_warp .goods_price{
  color:red;
}

.cart .goods_num_tool{
  display: flex;

}
.cart .goods_num{
  width: 55rpx;
  height: 55rpx;
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
}
.cart .jian, .jia{
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid gray;
  cursor: pointer;
}  
/*结算样式 */  
.cart_bottom_tool{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom:0rpx;
  display: flex; 
  justify-content:space-between;
  background: white;
  border-top: 1px solid gray;
}
.cart_bottom_tool .check_warp{
  flex: 2;
  padding-top:30rpx;
  
}
.cart_bottom_tool .settlement{
  flex: 3.5;
  display:flex;
}
.cart_bottom_tool .settlement .add_price{
  flex:2;
  font-size:40rpx;
}  
.cart_bottom_tool .settlement .goods_all_price_warp{
  flex:3;
}
.goods_all_price{
  color:red;
  font-weight: 600;
}  
.cart_bottom_tool .settlement .price_btn{
  flex:3;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  font-weight: 600;
  background:#fc6262;
  color: white;
}

